{{ define "list" }}
<!doctype html>
<html>
    {{- template "header" . }}
   <body>
      <div id="page-container">
         <div id="content-wrap">
         {{- template "navbar" . }}
        <section class="hero container">
            <h2>{{ .TagName }}</h2>
        </section>
        <section class="container link">
            <section>
            <div class="notes">
            {{- range .Links}}
                {{- if eq .Slug "index"}}
                    {{- if $.SitePrefix}}
                        <li><a href="/{{$.SitePrefix}}/">{{.Title}}</a></li>
                    {{- else}}
                        <li><a href="/">{{.Title}}</a></li>
                    {{- end}}
                {{- else}}
                    {{- if $.SitePrefix}}
                        <div class="note">
                        <a href="/{{$.SitePrefix}}/posts/{{.Slug}}.html">{{.Title}}</a><br/> {{- range $t := .Tags}}<a href="/{{$.SitePrefix}}/tags/{{$t}}.html">{{$t}}</a>|{{- end}}
                        </div>
                    {{- else}}
                        <div class="note"><a href="/posts/{{.Slug}}.html">{{.Title}}</a></div>
                    {{- end}}
                {{- end}} 
            {{- end}}
            </div>
            </section>
        </section>
         </div>
         {{- template "footer" . }}
      </div>
   </body>
</html>
{{- end }}
